{
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"target": "es5",
		"lib": ["es2017", "es6", "dom"],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "./src",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"alwaysStrict": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"**/*.test.ts",
		"**/*.spec.ts",
		"tests"
	],
	"types": ["@types"],
	"traceResolution": true
}
